local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/Banchon999/BCui/refs/heads/main/Ui%20make%20money.lua')))()

-- สร้างหน้าต่างหลัก
local Window = OrionLib:MakeWindow({
    Name = "ฟีเจอร์ขั้นสูง Orion Mobile", 
    HidePremium = false,
    SaveConfig = true, 
    ConfigFolder = "OrionAdvanced",
    IntroEnabled = true,
    IntroText = "ฟีเจอร์ขั้นสูง Orion",
    ShowIcon = true,
    Icon = "rbxassetid://4483345998"
})

-- สร้าง Tab ต่างๆ
local CombatTab = Window:MakeTab({
    Name = "ต่อสู้",
    Icon = "rbxassetid://7743878358", -- ไอคอนดาบ
    PremiumOnly = false
})

local FarmTab = Window:MakeTab({
    Name = "ฟาร์ม",
    Icon = "rbxassetid://4483345998", -- ไอคอนเหรียญ
    PremiumOnly = false
})

local PlayerTab = Window:MakeTab({
    Name = "ผู้เล่น",
    Icon = "rbxassetid://7733715400", -- ไอคอนคน
    PremiumOnly = false
})

local VisualsTab = Window:MakeTab({
    Name = "ภาพ",
    Icon = "rbxassetid://7734053495", -- ไอคอนตา
    PremiumOnly = false
})

local MiscTab = Window:MakeTab({
    Name = "อื่นๆ",
    Icon = "rbxassetid://7733799682", -- ไอคอนเฟือง
    PremiumOnly = false
})

--// ส่วนของ Combat Tab
local AimSection = CombatTab:AddSection({
    Name = "ระบบช่วยเล็ง"
})

-- ตัวอย่างของ Toggle พร้อมกับ ColorPicker
AimSection:AddToggle({
    Name = "เปิดใช้งาน Aimbot",
    Default = false,
    Save = true,
    Flag = "aimbotEnabled",
    Callback = function(Value)
        -- โค้ดสำหรับเปิด/ปิด Aimbot
    end
})

-- ตัวอย่าง Dropdown
local aimPartOptions = {"ศีรษะ", "ลำตัว", "แขน", "ขา"}
AimSection:AddDropdown({
    Name = "เลือกส่วนที่ต้องการเล็ง",
    Default = "ศีรษะ",
    Options = aimPartOptions,
    Save = true,
    Flag = "aimPart",
    Callback = function(Value)
        -- โค้ดสำหรับตั้งค่าส่วนที่ต้องการเล็ง
    end
})

-- ตัวอย่าง ColorPicker
AimSection:AddColorpicker({
    Name = "สี FOV",
    Default = Color3.fromRGB(255, 0, 0),
    Callback = function(Value)
        -- โค้ดสำหรับเปลี่ยนสี FOV
    end
})

local ESPSection = CombatTab:AddSection({
    Name = "ระบบ ESP"
})

-- ตัวอย่าง Toggle
ESPSection:AddToggle({
    Name = "เปิดใช้งาน ESP",
    Default = false,
    Save = true,
    Flag = "espEnabled",
    Callback = function(Value)
        -- โค้ดสำหรับเปิด/ปิด ESP
    end
})

-- ตัวอย่าง Toggle สำหรับตัวเลือกย่อย
ESPSection:AddToggle({
    Name = "แสดงระยะห่าง",
    Default = false,
    Save = true,
    Flag = "espShowDistance",
    Callback = function(Value)
        -- โค้ดสำหรับแสดง/ซ่อนระยะห่าง
    end
})

--// ส่วนของ Farm Tab
local AutoFarmSection = FarmTab:AddSection({
    Name = "ตั้งค่าฟาร์มอัตโนมัติ"
})

-- ตัวอย่างของ Toggle ที่ลิงก์กับ Slider
local autoFarmEnabled = false
local autoFarmSpeed = 1

AutoFarmSection:AddToggle({
    Name = "เปิดใช้งานฟาร์มอัตโนมัติ",
    Default = false,
    Save = true,
    Flag = "autoFarmEnabled",
    Callback = function(Value)
        autoFarmEnabled = Value
        
        -- แสดงการแจ้งเตือน
        OrionLib:MakeNotification({
            Name = "ระบบฟาร์ม",
            Content = Value and "เริ่มฟาร์มอัตโนมัติที่ความเร็ว " .. autoFarmSpeed .. "x" or "หยุดฟาร์มอัตโนมัติ",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
})

AutoFarmSection:AddSlider({
    Name = "ความเร็วในการฟาร์ม",
    Min = 1,
    Max = 10,
    Default = 1,
    Color = Color3.fromRGB(0, 255, 0),
    Increment = 1,
    ValueName = "x",
    Save = true,
    Flag = "autoFarmSpeed",
    Callback = function(Value)
        autoFarmSpeed = Value
        
        -- อัพเดทแจ้งเตือนถ้ากำลังฟาร์มอยู่
        if autoFarmEnabled then
            OrionLib:MakeNotification({
                Name = "ระบบฟาร์ม",
                Content = "ปรับความเร็วการฟาร์มเป็น " .. Value .. "x",
                Image = "rbxassetid://4483345998",
                Time = 3
            })
        end
    end
})

local CollectionSection = FarmTab:AddSection({
    Name = "การเก็บไอเทม"
})

CollectionSection:AddToggle({
    Name = "เก็บเหรียญอัตโนมัติ",
    Default = false,
    Save = true,
    Flag = "autoCollectCoins",
    Callback = function(Value)
        -- โค้ดสำหรับเก็บเหรียญ
    end
})

CollectionSection:AddToggle({
    Name = "เก็บเพชรอัตโนมัติ",
    Default = false,
    Save = true,
    Flag = "autoCollectGems",
    Callback = function(Value)
        -- โค้ดสำหรับเก็บเพชร
    end
})

--// ส่วนของ Player Tab
local MovementSection = PlayerTab:AddSection({
    Name = "การเคลื่อนที่"
})

-- ตัวอย่าง Toggle กับ Slider ที่เชื่อมโยงกัน
local speedEnabled = false
local speedValue = 16

MovementSection:AddToggle({
    Name = "วิ่งเร็ว",
    Default = false,
    Callback = function(Value)
        speedEnabled = Value
        game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value and speedValue or 16
    end
})

local SpeedSlider = MovementSection:AddSlider({
    Name = "ค่าความเร็ว",
    Min = 16,
    Max = 500,
    Default = 16,
    Color = Color3.fromRGB(255, 0, 0),
    Increment = 1,
    ValueName = "ความเร็ว",
    Callback = function(Value)
        speedValue = Value
        if speedEnabled then
            game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = Value
        end
    end
})

-- ตัวอย่าง Toggle กับ Slider ที่เชื่อมโยงกัน (สำหรับกระโดด)
local jumpEnabled = false
local jumpValue = 50

MovementSection:AddToggle({
    Name = "กระโดดสูง",
    Default = false,
    Callback = function(Value)
        jumpEnabled = Value
        game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value and jumpValue or 50
    end
})

MovementSection:AddSlider({
    Name = "ค่าความสูงกระโดด",
    Min = 50,
    Max = 500,
    Default = 50,
    Color = Color3.fromRGB(0, 0, 255),
    Increment = 1,
    ValueName = "ความแรง",
    Callback = function(Value)
        jumpValue = Value
        if jumpEnabled then
            game.Players.LocalPlayer.Character.Humanoid.JumpPower = Value
        end
    end
})

local TeleportSection = PlayerTab:AddSection({
    Name = "เทเลพอร์ต"
})

-- ตัวอย่าง Dropdown และ Button ที่ทำงานร่วมกัน
local locations = {
    ["จุดเกิด"] = Vector3.new(0, 10, 0),
    ["ร้านค้า"] = Vector3.new(100, 10, 100),
    ["ดันเจี้ยน"] = Vector3.new(-100, 10, -100),
    ["บอส"] = Vector3.new(0, 10, 200)
}

local selectedLocation = "จุดเกิด"

TeleportSection:AddDropdown({
    Name = "เลือกตำแหน่ง",
    Default = "จุดเกิด",
    Options = {"จุดเกิด", "ร้านค้า", "ดันเจี้ยน", "บอส"},
    Callback = function(Value)
        selectedLocation = Value
    end
})

TeleportSection:AddButton({
    Name = "เทเลพอร์ต",
    Callback = function()
        local character = game.Players.LocalPlayer.Character
        if character and locations[selectedLocation] then
            character:SetPrimaryPartCFrame(CFrame.new(locations[selectedLocation]))
            
            OrionLib:MakeNotification({
                Name = "ระบบเทเลพอร์ต",
                Content = "เทเลพอร์ตไปยัง " .. selectedLocation .. " สำเร็จ!",
                Image = "rbxassetid://4483345998",
                Time = 3
            })
        end
    end
})

--// ส่วนของ Visuals Tab
local WorldSection = VisualsTab:AddSection({
    Name = "โลก"
})

-- ตัวอย่าง Slider กับ ColorPicker
WorldSection:AddSlider({
    Name = "ความสว่าง",
    Min = 0,
    Max = 100,
    Default = 50,
    Color = Color3.fromRGB(255, 255, 0),
    Increment = 1,
    ValueName = "%",
    Callback = function(Value)
        -- โค้ดสำหรับปรับความสว่าง
    end
})

WorldSection:AddColorpicker({
    Name = "สีท้องฟ้า",
    Default = Color3.fromRGB(0, 150, 255),
    Callback = function(Value)
        -- โค้ดสำหรับเปลี่ยนสีท้องฟ้า
    end
})

local CharacterSection = VisualsTab:AddSection({
    Name = "ตัวละคร"
})

-- ตัวอย่าง Textbox
CharacterSection:AddTextbox({
    Name = "เปลี่ยนชื่อเหนือหัว",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        -- โค้ดสำหรับเปลี่ยนชื่อเหนือหัว
        OrionLib:MakeNotification({
            Name = "ระบบตัวละคร",
            Content = "เปลี่ยนชื่อเหนือหัวเป็น: " .. Value,
            Image = "rbxassetid://4483345998",
            Time = 3
        })
    end
})

--// ส่วนของ Misc Tab
local SettingsSection = MiscTab:AddSection({
    Name = "ตั้งค่า"
})

-- ตัวอย่าง Keybind (ปรับให้เหมาะกับมือถือ)
SettingsSection:AddBind({
    Name = "ปุ่มซ่อน UI (PC)",
    Default = Enum.KeyCode.RightShift,
    Hold = false,
    Callback = function()
        -- โค้ดซ่อน UI (จัดการโดยไลบรารีอยู่แล้ว)
    end
})

SettingsSection:AddParagraph("หมายเหตุสำหรับมือถือ", 
    "บนอุปกรณ์มือถือ คุณสามารถกดปุ่มซ่อน/แสดง UI ที่มุมซ้ายบนของหน้าจอ " ..
    "ทุกปุ่มจะมีขนาดใหญ่ขึ้นเพื่อให้ง่ายต่อการใช้งานด้วยการสัมผัส ระบบลากเพื่อปรับค่าของ Slider " ..
    "ได้รับการปรับให้ทำงานได้ดีกับอินพุตแบบสัมผัส")

-- ตัวอย่าง Label
SettingsSection:AddLabel("เวอร์ชั่น: 1.0.0")

-- ตัวอย่าง Button สำหรับรีเซ็ตค่าทั้งหมด
SettingsSection:AddButton({
    Name = "รีเซ็ตค่าทั้งหมด",
    Callback = function()
        -- รีเซ็ตค่าต่างๆ
        SpeedSlider:Set(16)
        
        OrionLib:MakeNotification({
            Name = "ระบบตั้งค่า",
            Content = "รีเซ็ตค่าทั้งหมดเรียบร้อย!",
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end
})

-- เริ่มต้นไลบรารี (จำเป็นต้องทำเสมอที่ท้ายสคริปท์)
OrionLib:Init()
